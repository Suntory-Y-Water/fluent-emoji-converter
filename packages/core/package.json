{
  "name": "@fluent-emoji-converter/core",
  "version": "1.0.1",
  "type": "module",
  "description": "Core logic for Fluent Emoji Converter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "emoji",
    "fluent",
    "converter",
    "microsoft",
    "typescript"
  ],
  "author": "suntory-n-water",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Suntory-Y-Water/fluent-emoji-converter.git"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "dev": "tsc --watch",
    "push": "pnpm build && pnpm publish --access public"
  },
  "dependencies": {
    "unicode-emoji-json": "^0.8.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
