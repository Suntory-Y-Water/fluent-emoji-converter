{
  "name": "@fluent-emoji-converter/core",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Core logic for Fluent Emoji Converter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --external:@fluent-emoji-converter/types --external:unicode-emoji-json",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "dev": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --watch"
  },
  "dependencies": {
    "unicode-emoji-json": "^0.8.0"
  },
  "devDependencies": {
    "@fluent-emoji-converter/types": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.19.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
